# MongoDB Connection String
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database

# JWT Secret for Authentication
JWT_SECRET=your_jwt_secret_key

# Frontend URL for CORS
FRONTEND_URL=https://vikiai.vikiflow.com

# API Keys for AI Services
OPENAI_API_KEY=your_openai_api_key
GOOGLE_API_KEY=your_google_api_key
GEMINI_API_KEY=your_gemini_api_key

# Supabase Configuration (for vector search)
SUPABASE_URL=your_supabase_project_url_here
SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Node Environment
NODE_ENV=production

# Optional: Port (only used in development)
PORT=4000

# Embedding Configuration (NEW - Controls embedding generation)
# Set to 'false' to disable all embedding generation while preserving code
ENABLE_EMBEDDINGS=true

# Individual embedding type controls (optional - for granular control)
# ENABLE_CONTENT_EMBEDDINGS=true
# ENABLE_TOPIC_EMBEDDINGS=true
# ENABLE_KEYWORD_EMBEDDINGS=true
# ENABLE_HEADING_EMBEDDINGS=true
# ENABLE_SECTION_EMBEDDINGS=true
# ENABLE_AUDIENCE_EMBEDDINGS=true
# ENABLE_QUESTION_TYPE_EMBEDDINGS=true

# Embedding features
# ENABLE_EMBEDDING_CACHE=true
# ENABLE_VECTOR_SEARCH=true

# Fallback behavior when embeddings are disabled
# FALLBACK_TO_METADATA_SEARCH=true
# FALLBACK_TO_TEXT_SEARCH=true

# Development and debugging
# LOG_EMBEDDING_SKIPS=true
# PRESERVE_EMBEDDING_PLACEHOLDERS=true

# Document Processing Configuration (NEW - Controls Docling vs LLM processing)
# Set to 'false' to disable Docling and force LLM fallback processing
ENABLE_DOCLING=true

# Docling service controls
# ENABLE_DOCLING_SERVICE_CHECK=true
# DOCLING_SERVICE_TIMEOUT=30000

# Force LLM fallback (skip Docling entirely)
# FORCE_LLM_FALLBACK=false

# Fallback behavior when Docling is disabled
# FALLBACK_TO_LLM_PROCESSING=true

# Development and debugging for Docling
# LOG_DOCLING_SKIPS=true
# PRESERVE_DOCLING_METADATA=true
